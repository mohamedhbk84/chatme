<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Login.LoginFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_arrow_back1_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="Sign In"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="52dp" android:layout_marginStart="32dp" android:layout_marginRight="32dp" android:layout_marginLeft="32dp" android:layout_marginEnd="32dp" android:id="@+id/editText" app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.503" android:inputType="textEmailAddress" android:hint="Email" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp" android:layout_marginStart="32dp" android:layout_marginRight="32dp" android:layout_marginLeft="32dp" android:layout_marginEnd="32dp" android:id="@+id/editText2" app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintHorizontal_bias="0.503" android:inputType="textPassword" android:hint="Password" android:ems="10"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:text="Log In" android:layout_marginTop="32dp" android:layout_marginStart="72dp" android:layout_marginRight="72dp" android:layout_marginLeft="72dp" android:layout_marginEnd="72dp" android:id="@+id/button2" app:layout_constraintTop_toBottomOf="@+id/editText2"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/colorAccent" android:padding="15dp" android:text="Register Now" android:layout_marginTop="48dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" android:id="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintHorizontal_bias="0.501"/>
    <com.google.android.gms.common.SignInButton
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/colorAccent"
        android:padding="15dp"
        android:layout_margin="@dimen/dim_l"
        android:id="@+id/google_button" app:layout_constraintTop_toBottomOf="@+id/textView2"
        >
    </com.google.android.gms.common.SignInButton>
    <TextView
        android:id="@+id/status1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/google_button"

        android:text="signed_out"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dim_l"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/sign_out_and_disconnect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@+id/status1"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="visible"
        tools:visibility="visible">

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sign_out" />

        <Button
            android:id="@+id/disconnect_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="disconnect" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>