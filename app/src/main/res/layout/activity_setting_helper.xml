<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SettingUi.SettingHelperActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingHelperToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />
    <FrameLayout
        android:id="@+id/settingHelperFrame"
        android:layout_below="@+id/settingHelperToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dim_5xl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/SettingHelper_invite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_8xl"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_l"
                android:layout_width="30dp"
                android:layout_height="@dimen/dim_2xl"
                android:src="@drawable/ic_help_black_24dp"
                tools:ignore="RtlCompat" />
            <LinearLayout
                android:textDirection="rtl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="الاسئلة المتكررة"
                    android:textSize="@dimen/dim_l"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dim_3xl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_2xl" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/SettingHelper_CallME"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_8xl"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_l"
                android:layout_width="30dp"
                android:layout_height="@dimen/dim_2xl"
                android:src="@drawable/ic_insert_invitation_black_24dp"/>
            <LinearLayout
                android:textDirection="rtl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="اتصل بنا"
                    android:textSize="@dimen/dim_l"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dim_xl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_2xl" />
                <TextView
                    android:text="هل لديك أسئلة ؟ هل تحتاج للمساعدة "
                    android:textSize="@dimen/dim_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_5xl" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/SettingHelper_private"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_8xl"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_l"
                android:layout_width="30dp"
                android:layout_height="@dimen/dim_2xl"
                android:src="@drawable/ic_priority_high_black_24dp"/>
            <LinearLayout
                android:textDirection="rtl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="الشروط وسياسية الخصوصية"
                    android:textSize="@dimen/dim_l"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dim_3xl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_2xl" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/SettingHelper_aboutApp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_8xl"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_l"
                android:layout_width="30dp"
                android:layout_height="@dimen/dim_2xl"
                android:src="@drawable/ic_apps_black_24dp"/>
            <LinearLayout
                android:textDirection="rtl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="معلومات التطبيق"
                    android:textSize="@dimen/dim_l"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dim_3xl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_2xl" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>